@{ 
   ViewData["Title"] = "Información Escuela";
   Layout = "_PlantillaSimple"; 
}

<!-- Mapeamos los campos del  objeto escuela-->
<h3>Escuela: @ViewData["Title"]</h3>
<h4>Nombre: @Model.Nombre</h4>
<p>Fundada en: <strong>@Model.AnioFundacion</strong></p>

<p><i>@ViewBag.ObjetoDinamico</i></p>
<p><i>@ViewData["ObjetoDinamico"]</i></p>